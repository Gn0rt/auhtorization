@model List<Authorization.Data.User>

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="p-4">
    <div style="display:flex; justify-content:flex-end; margin-bottom:20px;">
        <form method="get" action="/Auth/Logout">
            <button type="submit" style="padding:5px 10px;">ﾄ斉ハg xu蘯･t</button>
        </form>
    </div>
    <h2>Qu蘯｣n lﾃｽ tﾃi kho蘯｣n</h2>
    <button class="btn btn-success mb-3" id="btnAdd">+ Thﾃｪm tﾃi kho蘯｣n</button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tﾃi kho蘯｣n</th>
                <th>Vai trﾃｲ</th>
                <th>Thao tﾃ｡c</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr data-id="@user.Id">
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        <button class="btn btn-primary btn-sm btnEdit">S盻ｭa</button>
                        <button class="btn btn-danger btn-sm btnDelete">Xﾃｳa</button>
                        <button class="btn btn-warning btn-sm btnPermission">C蘯･p quy盻］</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- 沐ｹ Modal thﾃｪm User -->
    <div class="modal fade" id="addUserModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thﾃｪm tﾃi kho蘯｣n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label>Tﾃi kho蘯｣n:</label>
                    <input id="addUsername" class="form-control mb-2" />
                    <label>M蘯ｭt kh蘯ｩu:</label>
                    <input id="addPassword" class="form-control mb-2" type="password" />
                    <label>Vai trﾃｲ:</label>
                    <select id="addRole" class="form-select">
                        <option value="Employee">Employee</option>
                        <option value="Manager">Manager</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button id="saveAddUser" class="btn btn-primary">Lﾆｰu</button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">ﾄ静ｳng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 沐ｹ Modal s盻ｭa User -->
    <div class="modal fade" id="editUserModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">S盻ｭa tﾃi kho蘯｣n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="editId" />
                    <label>Tﾃi kho蘯｣n:</label>
                    <input id="editUsername" class="form-control mb-2" />
                    <label>M蘯ｭt kh蘯ｩu:</label>
                    <input id="editPassword" class="form-control mb-2" type="password" />
                    <label>Vai trﾃｲ:</label>
                    <select id="editRole" class="form-select">
                        <option value="Employee">Employee</option>
                        <option value="Manager">Manager</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button id="saveEditUser" class="btn btn-primary">C蘯ｭp nh蘯ｭt</button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">ﾄ静ｳng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal C蘯･p quy盻］ -->
    <div class="modal fade" id="permissionModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">C蘯･p quy盻］ cho tﾃi kho蘯｣n</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <h6>Quy盻］ chﾃｭnh</h6>
                    <div>
                        <input type="checkbox" value="quanli" /> Qu蘯｣n lﾃｽ<br>
                        <input type="checkbox" value="giamsat" /> Giﾃ｡m sﾃ｡t<br>
                        <input type="checkbox" value="congcu" /> Cﾃｴng c盻･<br>
                        <input type="checkbox" value="baocao" /> Bﾃ｡o cﾃ｡o
                    </div>

                    <h6 class="mt-3">Quy盻］ ph盻･</h6>
                    <div>
                        <input type="checkbox" value="nhanvien" /> Qu蘯｣n lﾃｽ nhﾃ｢n viﾃｪn<br>
                        <input type="checkbox" value="phongban" /> Qu蘯｣n lﾃｽ phﾃｲng ban<br>
                        <input type="checkbox" value="chucvu" /> Qu蘯｣n lﾃｽ ch盻ｩc v盻･
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="savePermission" class="btn btn-primary">Lﾆｰu</button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">ﾄ静ｳng</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        $(function () {
            //them tai khoan
            $("#btnAdd").on("click", function () {
                $("#addUserModal").modal("show");
            });

            //luu tai khoan moi
            $("#saveAddUser").on("click", function () {
                const data = {
                    username: $("#addUsername").val(),
                    password: $("#addPassword").val(),
                    role: $("#addRole").val(),

                };
                $.post("/Admin/AddUser", data, function (res) {
                    alert(res.message);
                    if (res.success) location.reload();
                });
            });

            //khi nhan sua
            $(".btnEdit").on("click", function () {
                const tr = $(this).closest("tr");
                console.log("tr: " + tr);
                $("#editId").val(tr.data("id"));
                $("#editUsername").val(tr.find("td:eq(1)").text());
                $("#editRole").val(tr.find("td:eq(2)").text());
                $("#editUserModal").modal("show");
            });

            //luu cap nhat
            $("#saveEditUser").on("click", function () {
                const data = {
                    id: $("#editId").val(),
                    username: $("#editUsername").val(),
                    password: $("#editPassword").val(),
                    role: $("#editRole").val()
                };
                $.post("/Admin/EditUser", data, function (res) {
                    alert(res.message);
                    if (res.success) location.reload();
                });
            });

            //xoa tai khoan
            $(".btnDelete").on("click", function () {
                if (!confirm("Ban co chac muon xoa tai khoan nay khong?")) return;
                const id = $(this).closest("tr").data("id");
                $.post("/Admin/DeleteUser", { id }, function (res) {
                    alert(res.message);
                    if (res.success) location.reload();
                });
            });

            //cap quyen
            let currentId = null;

            $(".btnPermission").on("click", function () {
                currentId = $(this).closest("tr").data("id");
                $("permissionModal input[type='checkbox']").prop("checked", false);

                $.get("/Admin/GetPermission", { userId: currentId }, function (res) {
                    if (res.success) {
                        res.main.forEach(v => {
                            $(`#permissionModal input[value='${v}']`).prop("checked", true);
                        });

                        res.sub.forEach(v => {
                            $(`#permissionModal input[value='${v}']`).prop("checked", true);
                        });
                    }
                    $("#permissionModal").modal("show");
                });
            });

            $("#savePermission").on("click", function () {
                const main = [];
                const sub = [];

                $("#permissionModal input[type='checkbox']:checked").each(function () {
                    const val = $(this).val();
                    if (["quanli", "giamsat", "congcu", "baocao"].includes(val)) main.push(val);
                    else sub.push(val);
                });

                $.post("/Admin/UpdatePermissions", { userId: currentId, mainPermissions: main, subPermissions: sub }, () => {
                    alert("C蘯･p quy盻］ thﾃnh cﾃｴng!");
                    $("#permissionModal").modal("hide");
                });
            });

        })

    </script>

</body>

</html>